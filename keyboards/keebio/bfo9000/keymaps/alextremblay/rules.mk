# Software Features
AUTO_SHIFT_ENABLE = yes      # Enable auto shift key
AUTOCORRECT_ENABLE = no     # Enable autocorrect
CAPS_WORD_ENABLE = yes       # Enable caps word
COMBO_ENABLE = no           # Enable combos
DIGITIZER_ENABLE = no       # Enable digitizer
KEY_LOCK_ENABLE = no        # Enable key lock
KEY_OVERRIDE_ENABLE = no    # Enable key override
OS_DETECTION_ENABLE = yes    # Enable OS detection
RAW_ENABLE = no             # Enable raw HID
SECURE_ENABLE = no          # Enable keyboard locking
SEND_STRING_ENABLE = yes   # Enable send string
SEQUENCER_ENABLE = no       # Enable sequencer
SWAP_HANDS_ENABLE = no      # Enable swap hands
TAP_DANCE_ENABLE = no       # Enable tap dance
DYNAMIC_TAPPING_TERM_ENABLE = no # Enable dynamic tapping term
