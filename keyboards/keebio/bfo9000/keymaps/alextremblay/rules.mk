PS2_MOUSE_ENABLE = no		 # Enable PS2 mouse
PS2_ENABLE = no				 # Enable PS2
SPLIT_KEYBOARD = yes 	  # Enable split keyboard

EXTRAKEY_ENABLE = yes       # Audio control and System control
